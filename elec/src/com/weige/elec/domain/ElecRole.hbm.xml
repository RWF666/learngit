<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.weige.elec.domain.ElecRole" table="Elec_Role">
		<id name="roleID" type="string" column="roleID">
			<generator class="assigned"></generator>
		</id>
		<property name="roleName" type="string" column="roleName"></property>
		
		<set name="elecUsers" table="elec_user_role">
			<key>
				<column name="roleID"></column>
			</key>
			<many-to-many class="com.weige.elec.domain.ElecUser" column="userID"/>
		</set> 
	</class>
</hibernate-mapping>
